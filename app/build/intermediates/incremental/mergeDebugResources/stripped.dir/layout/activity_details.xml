<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DetailsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Trip Name"
            android:textColor="#011578"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/tripname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"

            android:text="Trip Name"
            android:textColor="#000000"
            android:textSize="16sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Trip Desc"
            android:textColor="#011578"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/tripdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"

            android:text="Trip desc"
            android:textColor="#000000"
            android:textSize="16sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Trip from"
            android:textColor="#011578"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/tripfrome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"

            android:text="from"
            android:textColor="#070000"
            android:textSize="16sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Trip to"
            android:textColor="#011578"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/tripto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"

            android:text="To"
            android:textColor="#0C0000"
            android:textSize="16sp" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:text="Trip Date"
            android:textColor="#011578"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tripdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"

            android:text=" End ofthe world"
            android:textColor="#050000" />

        <Button
            android:id="@+id/editdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="edit date"
            android:textColor="#FBFBFB" />

    </LinearLayout>
    <com.dvdb.materialchecklist.MaterialChecklist
        android:id="@+id/checklist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        tools:layout_editor_absoluteX="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/savebtn"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_margin="8dp"
            android:text="save"
            android:textColor="@color/whiteTextColor" />

        <Button
            android:id="@+id/btn_start"
            android:layout_width="180dp"
            android:layout_height="70dp"
            android:layout_margin="8dp"
            android:text="Start"
            android:textColor="@color/whiteTextColor" />
    </LinearLayout>

</LinearLayout>